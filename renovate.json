{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchManagers": ["helmfile"],
      "commitMessagePrefix": "chore(helmfile/renovate): ",
      "sourceUrlTemplate": "https://github.com/jycamier/helm-auto-release-test",
      "addLabels": ["helm", "dependencies"]
    }
  ],
  "regexManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/|\\.)([Dd]ocker|[Cc]ontainer)file$",
        "(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s(?:ENV|ARG) .+?_VERSION[ =]\"?(?<currentValue>.+?)\"?\\s"
      ]
    }
  ]
}
